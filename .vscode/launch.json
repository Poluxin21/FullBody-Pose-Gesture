{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug VR Driver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/vrDriver/vrDriver",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Ativar impressão de modo de sinalização",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build vrDriver",
            "miDebuggerPath": "/usr/bin/gdb", // ou "C:/MinGW/bin/gdb.exe" para Windows com MinGW
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
