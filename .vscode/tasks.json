{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build vrDriver",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/vrDriver/main.cpp",
                "-o",
                "${workspaceFolder}/src/vrDriver/vrDriver",
                "-I${workspaceFolder}/src/vrDriver/openvr-2.5.1/headers",
                "-L${workspaceFolder}/src/vrDriver/openvr-2.5.1/lib",
                "-lopenvr_api",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilando o driver VR"
        }
    ]
}
